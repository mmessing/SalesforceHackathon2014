<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<p>
  <% dogs = Dog.where("id = #{@user['id']}") %>
  <% dogs.each do |dog| %>
    <div>
      Name:
      <%= dog.name %>
      Age:
      <%= dog.age %>
      Gender:
      <%= dog.gender %>
    </div>
  <img class="dog-image" src="<%= dog.image %>" />
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
